<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h2 class="text-center mb-4 mt-3"><i class="fas fa-sign-in-alt"></i>&nbsp;&nbsp;Login</h2>

            <%- include('./partials/messages.ejs'); %>

            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email..." />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password..." />
                </div>
                <button type="submit" class="btn btn-success btn-block btn-lg mt-4">Login</button>
            </form>
            <h6 class="mt-4 text-center">
                Don't have an account? <a href="/users/register" class="lead">&nbsp;Register</a>
            </h6>
        </div>
    </div>
</div>